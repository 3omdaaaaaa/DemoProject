<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ordered Feature Execution" verbose="1" parallel="false">
    <listeners>
        <listener class-name="com.swaglabs.listeners.CustomTestNGListener"/>
    </listeners>

    <test name="Login Feature">
        <classes>
            <class name="org.example.cucumber.testrunner.LoginTestRunner"/>
        </classes>
    </test>
    <test name="Home Feature">
        <classes>
            <class name="org.example.cucumber.testrunner.HomePageTestRunner"/>
        </classes>
    </test>
    <test name="Checkout Feature">
        <classes>
            <class name="org.example.cucumber.testrunner.CheckoutTestRunner"/>
        </classes>
    </test>
</suite>
